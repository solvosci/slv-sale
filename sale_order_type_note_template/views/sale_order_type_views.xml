<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sot_sale_order_type_tree_view" model="ir.ui.view">
        <field name="name">
            sale.order.type.tree.view (in sale_order_type_note_template)
        </field>
        <field name="model">sale.order.type</field>
        <field
            name="inherit_id"
            ref="sale_order_type.sot_sale_order_type_tree_view"
        />
        <field name="arch" type="xml">
            <field name="incoterm_id" position="after">
                <field name="terms_template_id"/>
            </field>
        </field>
    </record>

    <record id="sot_sale_order_type_form_view" model="ir.ui.view">
        <field name="name">
            sale.order.type.form.view (in sale_order_type_note_template)
        </field>
        <field name="model">sale.order.type</field>
        <field
            name="inherit_id"
            ref="sale_order_type.sot_sale_order_type_form_view"
        />
        <field name="arch" type="xml">
            <field name="incoterm_id" position="after">
                <field name="terms_template_id"/>
            </field>
        </field>
    </record>
</odoo>
