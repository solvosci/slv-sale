<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_type_engine_data_form_view" model="ir.ui.view">
        <field name="name">sale.order.type.form</field>
        <field name="model">sale.order.type</field>
        <field name="inherit_id" ref="sale_order_type.sot_sale_order_type_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='incoterm_id']" position="after">
                <field name="engine_data_enabled" />
            </xpath>
        </field>
    </record>

    <record id="sale_order_type_engine_data_tree_view" model="ir.ui.view">
        <field name="name">sale.order.type.form</field>
        <field name="model">sale.order.type</field>
        <field name="inherit_id" ref="sale_order_type.sot_sale_order_type_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sequence_id']" position="after">
                <field name="engine_data_enabled" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_type_engine_data_search_view" model="ir.ui.view">
        <field name="name">sale.order.type.engine.data.search</field>
        <field name="model">sale.order.type</field>
        <field name="inherit_id" ref="sale_order_type.sot_sale_order_type_search_view" />
        <field name="arch" type="xml">
            <search>
                <filter string="Engine Data Enabled" name="engine_data_enabled" domain="[('engine_data_enabled','=',True)]"/>
            </search>
        </field>
    </record>

</odoo>
