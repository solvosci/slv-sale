<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_engine_data_form_view" model="ir.ui.view">
        <field name="name">sale.order.engine.data.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_order_engine_data.sale_order_engine_data_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='engine_ref']" position="after">
                <field name="engine_data_enabled" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='engine_data']" position="attributes">
                <attribute name="attrs">{'invisible':[('engine_data_enabled','=',False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='engine_ref']" position="attributes">
                <attribute name="attrs">{
                    'required':[
                        ('engine_data_enabled', '=', True),
                        ('state','in',['done','sale']),
                    ]
                }</attribute>
            </xpath>
        </field>
    </record>

</odoo>
