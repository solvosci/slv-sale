<odoo>
    <record id="sale_order_invoice_qty_number" model="ir.ui.view">
        <field name="name">sale.order.invoice.qty.number.tree (Invoice Qty Number)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_status']" position="after">
                <field name="invoice_number_count" optional="hide" string="Inv. cnt." />
            </xpath> 
            <xpath expr="//field[@name='invoice_number_count']" position="attributes">
                <attribute name="decoration-bf"> invoice_number_count == 0 </attribute>
            </xpath> 
        </field>
    </record>
    
    <record id="sale_order_invoice_qty_number_filter" model="ir.ui.view">
        <field name="name">sale.order.invoice.qty.number.search (Invoice Qty Number)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search//field[@name='order_line']" position="after">
                <field name="invoice_number_count" string="Without invoice" />
            </xpath>
           <xpath expr="//filter[@name='activities_upcoming_all']" position="after">
                <separator/>
                <filter name="invoice_number_count" string="Without invoices" domain="[('invoice_number_count','=', '0')]" />
            </xpath>
        </field>
    </record>
</odoo>
