<odoo>
    <record id="sale_order_view_form" model="ir.ui.view"> 
        <field name="name">sale.order.form (Sale Order Analytic Account Mandatory)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']//field[@name='analytic_account_id']" position="attributes">
                <t groups="analytic.group_analytic_accounting">
                    <attribute name="invisible">True</attribute>
                </t>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="analytic_account_id"
                    required="True"
                    context="{'default_partner_id':partner_invoice_id, 'default_name':name}"
                    readonly="invoice_count != 0 and state == 'sale'"
                    force_save="1"
                    groups="analytic.group_analytic_accounting"
                />
            </xpath>  
        </field>
    </record>

    <record id="view_sale_order_graph" model="ir.ui.view"> 
        <field name="name">sale.order.graph (Sale Order Analytic Account Mandatory)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sale_order_graph" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
            </field>
        </field>
    </record>

    <record id="view_sales_order_filter" model="ir.ui.view">
        <field name="name">sale.order.list.select (Sale Order Analytic Account Mandatory)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='customer']" position="after">
                <filter name="analytic_account_id" string="Analytic account" context="{'group_by': 'analytic_account_id'}" groups="analytic.group_analytic_accounting"/>
            </xpath>
        </field>
    </record>
</odoo>
