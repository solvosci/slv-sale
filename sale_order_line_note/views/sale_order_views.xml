<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form (in sale_order_line_note)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']//form//div[@name='invoice_lines']"
                position="before"
            >
                <group>
                    <field
                        name="note" 
                        attrs="{'invisible': [('display_type','!=',False)]}"
                    />
                </group>
            </xpath>
            <xpath
                expr="//field[@name='order_line']//tree//field[@name='company_id']"
                position="after"
            >
                <field
                    name="note" 
                    attrs="{'readonly': [('display_type','!=',False)]}"
                    optional="hide"
                />
            </xpath>
        </field>
    </record>

</odoo>
